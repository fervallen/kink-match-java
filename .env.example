# JWT secrets (REPLACE LOCALLY)
APP_JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_SECRET_AT_LEAST_64_CHARS____________________

# Access token TTL in minutes
APP_JWT_ACCESS_EXP_MINUTES=15

# Refresh token TTL in days (stored in DB as hash)
APP_JWT_REFRESH_EXP_DAYS=14

# Cookies (dev usually false; prod true with HTTPS)
APP_COOKIE_SECURE=false

# SameSite cookie policy: Lax / Strict / None
APP_COOKIE_SAMESITE=Lax

# CORS: Vue dev server origin(s), comma-separated if needed
APP_CORS_ORIGINS=http://localhost:5173

# Postgres
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=app

# Bootstrap admin (DEV only)
APP_BOOTSTRAP_ADMIN_EMAIL=admin@kinkmatch.local
APP_BOOTSTRAP_ADMIN_PASSWORD=Admin123456!
